<Window x:Class="PSFDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PSFDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Button Content="Read configuration file" Click="OnReadFile" />
        <Button Content="Update configuration file" Click="OnWriteFile" />
        <TextBlock Text="App name:" />
        <TextBox x:Name="AppName" />
        <TextBlock Text="Version:" />
        <TextBox x:Name="Version" />
    </StackPanel>
</Window>
